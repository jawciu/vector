generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Company {
  id          Int           @id @default(autoincrement())
  name        String
  onboardings Onboarding[]
}

model Onboarding {
  id            Int       @id @default(autoincrement())
  companyId     Int
  owner         String    @default("")
  status        String    @default("Active") // Active | Completed | Paused | Archived
  targetGoLive  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  company       Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  tasks         Task[]
  contacts      Contact[]
  phases        Phase[]
}

model Contact {
  id            Int        @id @default(autoincrement())
  onboardingId  Int
  onboarding    Onboarding @relation(fields: [onboardingId], references: [id], onDelete: Cascade)
  name          String
  email         String     @default("")
  role          String     @default("")
}

model Phase {
  id            Int        @id @default(autoincrement())
  onboardingId  Int
  onboarding    Onboarding @relation(fields: [onboardingId], references: [id], onDelete: Cascade)
  name          String
  sortOrder     Int
  targetDate    DateTime?
  isComplete    Boolean    @default(false)
  tasks         Task[]
}

model Task {
  id              Int     @id @default(autoincrement())
  onboardingId    Int
  onboarding      Onboarding @relation(fields: [onboardingId], references: [id], onDelete: Cascade)
  phaseId         Int
  phase           Phase   @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  title           String
  description     String  @default("")
  status          String  // Not started | In progress | Under investigation | Blocked | Done
  due             String  // e.g. "2026-03-01"
  owner           String  @default("")
  members         String[] @default([])
  notes           String  @default("")
  sortOrder       Int     @default(0)
  priority        String? // low | medium | high
  commentCount    Int     @default(0)
  previousStatus  String? // stores status before "Done" for toggle-back
  blockedByTaskId Int?
  blockedByTask   Task?   @relation("TaskBlocks", fields: [blockedByTaskId], references: [id], onDelete: SetNull)
  blockedTasks    Task[]  @relation("TaskBlocks")
  comments        Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  taskId    Int
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  author    String
  body      String
  createdAt DateTime @default(now())
}
